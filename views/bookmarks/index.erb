<h2>This is a bookmark manager</h2>
<div>
  <ul>
    <%@bookmarks.each do |element|%>
    This entry's id = <%=element.id%>
      <li class="each_entry" id="entry_<%=element.id%>">
        <a href= "<%=element.url%>">
          <%=element.title%>
        </a>
          <form action="/bookmarks/delete/<%=element.id%>" method="post">
            <input type="submit" name="delete" value="Delete">
          </form>
          <form action="/bookmarks/<%=element.id%>/edit">
            <input type="submit" name="edit" value="Edit">
          </form>
      </li>
    <%end%>
  </ul>
</div>

<div>
  <form action="/bookmarks/new" method="post">
      <label for="title">Title</label>
      <input type="text" id="title" name="title">
      <label for="url">URL</label>
      <input type="text" id="url" name="url">
      <input type="submit" value="Add">
  </form>
</div>

<div>
  <%=flash[:notice]%>
</div>

